{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "@testing-library/jest-dom"]
  },
  "include": [
    "src/mock/**/*",
    "src/**/*",
    "config/**/*",
    "typings.d.ts",
    ".eslintrc.js",
    ".stylelintrc.js",
    ".prettierrc.js",
    "tailwind.config.js",
    "postcss.config.js",
    "cypress.config.ts"
  ],
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "docs"]
}
